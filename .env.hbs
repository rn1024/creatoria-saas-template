# Application
NODE_ENV=development
PORT={{appPort}}

# API Configuration
API_PREFIX={{apiPrefix}}
ADMIN_PREFIX={{adminPrefix}}
SYSTEM_PREFIX={{systemPrefix}}

# Database Configuration
DB_TYPE={{dbType}}
DB_HOST={{dbHost}}
DB_PORT={{dbPort}}
DB_DATABASE={{dbDatabase}}
DB_USERNAME={{dbUsername}}
DB_PASSWORD={{dbPassword}}
DB_SYNCHRONIZE=false
DB_LOGGING=false

{{#if (includes features 'auth')}}
# JWT Configuration
JWT_SECRET={{jwtSecret}}
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
{{/if}}

{{#if (includes features 'redis')}}
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT={{redisPort}}
REDIS_PASSWORD={{redisPassword}}
REDIS_DB=0
REDIS_TTL=60
{{/if}}

{{#if (includes features 'swagger')}}
# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs
SWAGGER_TITLE={{projectName}} API
SWAGGER_DESCRIPTION=API documentation for {{projectName}}
SWAGGER_VERSION=1.0.0
{{/if}}

{{#if (includes features 'cors')}}
# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true
{{/if}}

{{#if (includes features 'throttle')}}
# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
{{/if}}

{{#if (includes features 'email')}}
# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM="{{projectName}}" <noreply@example.com>
{{/if}}

{{#if (includes features 'sms')}}
# SMS Configuration
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY=
SMS_SECRET_KEY=
SMS_SIGN_NAME={{projectName}}
{{/if}}

{{#if (includes features 'oss')}}
# Object Storage Configuration
OSS_PROVIDER=aliyun
OSS_ACCESS_KEY=
OSS_SECRET_KEY=
OSS_BUCKET={{projectName}}-bucket
OSS_REGION=oss-cn-shanghai
OSS_ENDPOINT=
{{/if}}

{{#if (includes features 'elasticsearch')}}
# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX={{projectName}}
{{/if}}

{{#if (includes features 'rabbitmq')}}
# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME={{rabbitmqUser}}
RABBITMQ_PASSWORD={{rabbitmqPassword}}
RABBITMQ_VHOST={{projectName}}
{{/if}}

{{#if (includes features 'minio')}}
# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY={{minioRootUser}}
MINIO_SECRET_KEY={{minioRootPassword}}
MINIO_BUCKET={{projectName}}
MINIO_USE_SSL=false
{{/if}}

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=logs

# Security Configuration
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET={{sessionSecret}}

{{#if (includes features 'social')}}
# Social Auth Configuration
# WeChat
WECHAT_APP_ID=
WECHAT_APP_SECRET=
WECHAT_REDIRECT_URL=

# GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=

# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=
{{/if}}

{{#if (includes features 'payment')}}
# Payment Configuration
# Alipay
ALIPAY_APP_ID=
ALIPAY_PRIVATE_KEY=
ALIPAY_PUBLIC_KEY=

# WeChat Pay
WECHAT_PAY_APP_ID=
WECHAT_PAY_MCH_ID=
WECHAT_PAY_KEY=
{{/if}}