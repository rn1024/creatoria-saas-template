{
  "name": "{{projectName}}",
  "version": "0.1.0",
  "description": "A Creatoria SaaS application",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    {{#if (includes features 'docker')}}
    "db:start": "docker-compose up -d postgres{{#if (includes features 'redis')}} redis{{/if}}",
    "db:stop": "docker-compose stop",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "db:migrate": "npm run typeorm migration:run",
    "db:migrate:generate": "npm run typeorm migration:generate",
    "db:seed": "ts-node src/database/seeds/run-seed.ts",
    "dev": "npm run db:start && npm run start:dev",
    "dev:clean": "npm run db:reset && npm run dev",
    {{/if}}
    "prebuild": "rimraf dist",
    "precommit": "npm run lint && npm run test"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/config": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    {{#if (includes features 'auth')}}
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "bcryptjs": "^2.4.3",
    {{/if}}
    {{#if (includes features 'database')}}
    "@nestjs/typeorm": "^11.0.0",
    "typeorm": "^0.3.20",
    "pg": "^8.11.0",
    {{/if}}
    {{#if (includes features 'swagger')}}
    "@nestjs/swagger": "^11.0.0",
    "swagger-ui-express": "^5.0.0",
    {{/if}}
    {{#if (includes features 'redis')}}
    "ioredis": "^5.3.2",
    "@nestjs/cache-manager": "^2.2.0",
    "cache-manager": "^5.3.0",
    "cache-manager-ioredis": "^2.1.0",
    {{/if}}
    {{#if (includes features 'graphql')}}
    "@nestjs/graphql": "^12.0.0",
    "@nestjs/apollo": "^12.0.0",
    "@apollo/server": "^4.9.0",
    "graphql": "^16.8.0",
    {{/if}}
    {{#if (includes features 'websocket')}}
    "@nestjs/websockets": "^11.0.0",
    "@nestjs/platform-socket.io": "^11.0.0",
    "socket.io": "^4.6.0",
    {{/if}}
    {{#if (includes features 'microservice')}}
    "@nestjs/microservices": "^11.0.0",
    {{/if}}
    {{#if (includes features 'schedule')}}
    "@nestjs/schedule": "^4.0.0",
    {{/if}}
    {{#if (includes features 'throttle')}}
    "@nestjs/throttler": "^5.1.0",
    {{/if}}
    {{#if (includes features 'health')}}
    "@nestjs/terminus": "^10.2.0",
    {{/if}}
    {{#if (includes features 'email')}}
    "@nestjs-modules/mailer": "^1.10.0",
    "nodemailer": "^6.9.0",
    "handlebars": "^4.7.0",
    {{/if}}
    {{#if (includes features 'queue')}}
    "@nestjs/bull": "^10.1.0",
    "bull": "^4.11.0",
    {{/if}}
    {{#if (includes features 'file-upload')}}
    "@nestjs/platform-multer": "^11.0.0",
    "multer": "^1.4.5-lts.1",
    {{/if}}
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    {{#if (includes features 'auth')}}
    "@types/bcryptjs": "^2.4.6",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    {{/if}}
    {{#if (includes features 'redis')}}
    "@types/cache-manager": "^4.0.6",
    {{/if}}
    {{#if (includes features 'email')}}
    "@types/nodemailer": "^6.4.14",
    {{/if}}
    {{#if (includes features 'file-upload')}}
    "@types/multer": "^1.4.11",
    {{/if}}
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/$1"
    }
  },
  "creatoria": {
    "version": "1.0.0",
    "template": "default",
    "createdAt": "{{createdAt}}",
    "features": {{json features}},
    "modules": []
  }
}